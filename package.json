{
  "name": "checklist-mcp-server",
  "version": "1.2.0",
  "description": "An MCP server for hierarchical checklist management with HTTP streamable transport support.",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "checklist-mcp-server": "dist/cli.js",
    "checklist-mcp-server-http": "dist/http-server.js",
    "checklist-mcp-server-stdio": "dist/mcp-server.js"
  },
  "scripts": {
    "build": "tsc",
    "start:http": "npm run build && node dist/http-server.js",
    "dev:http": "ts-node src/http-server.ts",
    "test": "npm run build && npx ts-node test/all-tests.ts",
    "verify": "npm run build && node scripts/verify-package.js",
    "publish:interactive": "node scripts/publish.js",
    "publish:check": "node scripts/pre-publish-check.js",
    "postinstall": "node scripts/postinstall.js",
    "docker:build": "docker build -t checklist-mcp-server:latest .",
    "docker:build:test": "./scripts/docker-build.sh",
    "docker:build:multiplatform": "./scripts/docker-build-multiplatform.sh",
    "docker:run": "docker run -d --name checklist-mcp-server -p 8585:8585 checklist-mcp-server:latest",
    "docker:stop": "docker stop checklist-mcp-server && docker rm checklist-mcp-server",
    "docker:logs": "docker logs -f checklist-mcp-server",
    "docker:push": "./scripts/docker-push-ghcr.sh",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f"
  },
  "keywords": [
    "mcp",
    "checklist",
    "http",
    "streamable-transport",
    "task-management",
    "hierarchical",
    "model-context-protocol",
    "ai-assistant",
    "task-tracker",
    "npx",
    "docker",
    "container"
  ],
  "files": [
    "dist/**/*",
    "scripts/**/*",
    "README.md",
    "CHANGELOG.md",
    "MIGRATION.md",
    "USAGE_EXAMPLES.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "chene <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/chene/checklist-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/chene/checklist-mcp-server/issues"
  },
  "homepage": "https://github.com/chene/checklist-mcp-server#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.0",
    "express": "^5.1.0",
    "pino": "^9.6.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.17.41",
    "jest": "^30.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}